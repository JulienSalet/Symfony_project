{% extends 'base.html.twig' %}

{% block main %}
    <div class="my-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 offset-md-5">
                    <h1>Our articles</h1>
                </div>
            </div>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                {{ product.name }}
                            </div>
                            <div class="card-body">
                                Prix : {{ product.price }}â‚¬
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('show', {'id': product.id}) }}" class="btn btn-primary">Voir le produit</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}